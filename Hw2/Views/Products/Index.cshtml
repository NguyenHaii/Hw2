@model IEnumerable<MvcProducts.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<div class="container py-4">
    <h1 class="mb-4">Product List</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle table-bordered">

            <thead class="table-light">
                <tr>
                    <th style="width:120px;">Id</th>
                    <th>Name</th>
                    <th class="text-end" style="width:180px;">Price (VND)</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id" class="link-primary text-decoration-none">
                            @p.Name
                        </a>
                    </td>
                    <td class="text-end">@p.Price.ToString("N0")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
